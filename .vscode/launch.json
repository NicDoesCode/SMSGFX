{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox (HTTP)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:8080/index.html",
            "webRoot": "${workspaceFolder}/wwwroot",
            "profile": "debug",
            "keepProfileChanges": true,
            "pathMappings": [
                {
                    "url": "http://localhost:8080",
                    "path": "${workspaceFolder}/wwwroot"
                }
            ],
            "preLaunchTask": "launch-server",
            "postDebugTask": "stop-server"
        },
        {
            "name": "Launch Firefox (HTTPS)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "https://localhost:8443/index.html",
            "webRoot": "${workspaceFolder}/wwwroot",
            "profile": "debug",
            "keepProfileChanges": true,
            "pathMappings": [
                {
                    "url": "https://localhost:8443",
                    "path": "${workspaceFolder}/wwwroot"
                }
            ],
            "preLaunchTask": "launch-server",
            "postDebugTask": "stop-server"
        },
        {
            "name": "Attach Firefox",
            "type": "firefox",
            "request": "attach",
            "url": "https://localhost:8443/index.html",
            "webRoot": "${workspaceFolder}/wwwroot",
            "pathMappings": [
                {
                    "url": "https://localhost:8443",
                    "path": "${workspaceFolder}/wwwroot"
                }
            ]
        },
        {
            "name": "Serve and launch Chrome (HTTPS)",
            "request": "launch",
            "type": "chrome",
            "url": "https://localhost:8443",
            "webRoot": "${workspaceFolder}/wwwroot",
            "preLaunchTask": "launch-server",
            "postDebugTask": "stop-server"
        },
        {
            "name": "Launch Chrome (HTTPS)",
            "request": "launch",
            "type": "chrome",
            "url": "https://localhost:8443",
            "webRoot": "${workspaceFolder}/wwwroot"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/wwwroot",
        },
        {
            "name": "Launch Firefox (HTTPS) (prod)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "https://localhost:8443/index.html",
            "webRoot": "${workspaceFolder}/dist",
            "profile": "debug",
            "keepProfileChanges": true,
            "pathMappings": [
                {
                    "url": "https://localhost:8443",
                    "path": "${workspaceFolder}/dist"
                }
            ],
            "preLaunchTask": "launch-prod-server",
            "postDebugTask": "stop-server"
        }
    ]
}